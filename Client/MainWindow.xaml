<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="Client" Background="#FF1B1E25">
        <StackPanel>
            <Label x:Name="label" Content="Введите IP адрес" Height="40" Width="180" Foreground="White" FontFamily="Bahnschrift" FontSize="20" BorderThickness="2,5,0,0" Background="#FF1B1E25" Margin="0,140,0,0" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
            <TextBox x:Name="textBox" TextWrapping="Wrap" Text="" Height="40" Width="424" RenderTransformOrigin="0.493,0.544" Background="#FF31343A" FontFamily="Bahnschrift" FontSize="36" TextAlignment="Center" BorderBrush="#FF31343A" Foreground="White" SelectionBrush="#FF31343A" HorizontalAlignment="Center" TextChanged="textBox_TextChanged" Margin="0,0,0,10"/>
            <Button x:Name="button" Content="Жмать" Height="35" Width="180" FontSize="20" Click="button_Click" Background="#FF31343A" FontFamily="Bahnschrift" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </StackPanel>
    </Grid>
</Window>
